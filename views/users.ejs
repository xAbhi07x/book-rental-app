<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto mt-10 p-5">
        <h1 class="text-3xl font-bold text-center mb-6">User List</h1>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="py-3 px-5 border-b text-left text-gray-600">ID</th>
                        <th class="py-3 px-5 border-b text-left text-gray-600">Name</th>
                        <th class="py-3 px-5 border-b text-left text-gray-600">Email</th>
                        <th class="py-3 px-5 border-b text-left text-gray-600">Created At</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr class="hover:bg-gray-100">
                            <td class="py-3 px-5 border-b"><%= user._id %></td>
                            <td class="py-3 px-5 border-b"><%= user.name %></td>
                            <td class="py-3 px-5 border-b"><%= user.email %></td>
                            <td class="py-3 px-5 border-b"><%= user.createdAt ? user.createdAt.toISOString().split('T')[0] : 'N/A' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
